{% extends '::base.html.twig' %}

{% block container %}
    <section class="section-map">
        <div class="map-holder shadowed">
            <div id="map" class="map"></div>
        </div>
    </section>

    <section class="section-contact">
        <div class="container">
            <div class="row-fluid">
                <div class="col-sm-6">
                    <div class="contact-form-holder">
                        <h4>liên lạc với chúng tôi</h4>
                        <div class="message-box"></div>

                        <form class="contact-form form-horizontal" method="post" >
                            <div class="row-fluid">
                                {{ form(form) }}
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="contact-info-boxes">
                        <h4>thông tin liên lạc</h4>
                        <div class="row-fluid contact-info">
                            <div class="col-sm-6">
                                <p>
                                    <strong>Virgos Beauty</strong><br>
                                    Sản phẩm làm đẹp và chăm sóc sức khoẻ từ Úc<br>
                                    <i class="icon-map-marker"></i> 34A Trần Phú, Ba Đình, Hà Nội<br>
                                </p>
                            </div>
                            <div class="col-sm-6">
                                <p>
                                    <strong>Thông tin sản phẩm:</strong><br>
                                    <i class="icon-mobile-phone"></i> 098 232 5474<br><br>
                                </p>
                                <p>
                                    <strong>Mạng xã hội:</strong><br>
                                </p>
                                <ul class="inline social-icons">
                                    <li><a href="https://www.facebook.com/virgosbeautyau" class="icon-facebook"></a></li>
                                    <li><a href="https://twitter.com/virgos_beauty" class="icon-twitter"></a></li>
                                    <li><a href="http://instagram.com/virgosbeautyau" class="icon-instagram"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock container %}
{% block additional_script %}
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=vi"></script>
{% endblock %}