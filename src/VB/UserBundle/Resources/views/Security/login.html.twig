{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block container %}

<section class="section-login">
    <div class="container">
        <div class="section-title">
            <h1>Đăng nhập</h1>
        </div>
        <div class="row-fluid">
            <form class="col-sm-4 col-sm-offset-4 form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error|trans }}</div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="form-label" for="username">{{ 'security.login.username'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>

                <div class="row-fluid">
                    <div class="pull-left rememberme">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label class="form-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="pull-right">
                        <a href="{{ path('fos_user_resetting_request') }}">Quên mật khẩu?</a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="control-group">
                    <input class=" pull-right cusmo-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    <a class="cusmo-btn social facebook" href="{{ path('facebook_login_link') }}">Đăng nhập với Facebook</a>
                    <a class="cusmo-btn social google" href="{{ path('google_login_link') }}">Đăng nhập với Google+</a>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock container %}
